<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="modulo" transaction-type="RESOURCE_LOCAL">
    <provider>${jpa.provider}</provider>      
    <class>br.gov.to.secad.modulo.domain.EstadoCivil</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>${jpa.shared-cache-mode}</shared-cache-mode>
    <properties>
      <property name="${jpa.dialect}" value="${jpa.dialect_value}"/>
      <property name="${jpa.ddl}" value="${jpa.ddl_value}"/>
      <property name="${jpa.logging}" value="${jpa.logging_value}"/>
      <property name="${jpa.cache.second_level}" value="${jpa.cache.second_level_value}"/>
      <property name="${jpa.cache.second_level_provider}" value="${jpa.cache.second_level_provider_value}"/>
      <property name="${jpa.weaving}" value="${jpa.weaving_value}"/>
    </properties>
  </persistence-unit>
</persistence>
