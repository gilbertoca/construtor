<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="annotatedPU" transaction-type="RESOURCE_LOCAL">
        <provider>${jpa.provider}</provider>
        <mapping-file>META-INF/orm.xml</mapping-file>
        <class>com.gilbertoca.gfi.inventario.model.UnidadeMedida</class>
        <class>com.gilbertoca.gfi.inventario.model.Produto</class>    
        <class>com.gilbertoca.gfi.inventario.model.Categoria</class>
        <class>com.gilbertoca.gfi.inventario.model.Item</class>
        <properties>
            <property name="${jpa.driver}" value="${jdbc.driverClassName}"/>
            <property name="${jpa.url}" value="${jdbc.url}"/>
            <property name="${jpa.username}" value="${jdbc.username}"/>
            <property name="${jpa.password}" value="${jdbc.password}"/>
            <property name="${jpa.ddl}" value="${jpa.ddl_value}"/>
            <property name="${jpa.logging}" value="${jpa.logging_value}"/>
            <property name="${jpa.minConnections}" value="1"/>
            <property name="${jpa.maxConnections}" value="2"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="metadataPU" transaction-type="RESOURCE_LOCAL">
        <provider>${jpa.provider}</provider>
        <mapping-file>META-INF/inventario.xml</mapping-file>
        <class>com.gilbertoca.gfi.inventario2.model.Categoria</class>
        <properties>
            <property name="${jpa.driver}" value="${jdbc.driverClassName}"/>
            <property name="${jpa.url}" value="${jdbc.url}"/>
            <property name="${jpa.username}" value="${jdbc.username}"/>
            <property name="${jpa.password}" value="${jdbc.password}"/>
            <property name="${jpa.ddl}" value="${jpa.ddl_value}"/>
            <property name="${jpa.logging}" value="${jpa.logging_value}"/>
            <property name="${jpa.minConnections}" value="1"/>
            <property name="${jpa.maxConnections}" value="2"/>
        </properties>
    </persistence-unit>    
    <persistence-unit name="gfi-gerPU" transaction-type="RESOURCE_LOCAL">
        <provider>${jpa.provider}</provider>
        <class>com.gilbertoca.gfi.ger.model.TpDeficiencia</class>
        <class>com.gilbertoca.gfi.ger.model.TpDependencia</class>
        <class>com.gilbertoca.gfi.ger.model.TpGrauParentesco</class>
        <class>com.gilbertoca.gfi.ger.model.TpMotivoFimDependencia</class>
        <class>com.gilbertoca.gfi.ger.model.TpMotivoInicioDependencia</class>
        <class>com.gilbertoca.gfi.ger.model.TpNacionalidade</class>
        <class>com.gilbertoca.gfi.ger.model.TpRaca</class>
        <class>com.gilbertoca.gfi.ger.model.TpReligiao</class>
        <class>com.gilbertoca.gfi.ger.model.TpSanguineo</class>
        <class>com.gilbertoca.gfi.ger.model.Escolaridade</class>
        <class>com.gilbertoca.gfi.ger.model.EstadoCivil</class>
        <class>com.gilbertoca.gfi.ger.model.Pessoa</class>
        <class>com.gilbertoca.gfi.ger.model.Email</class>
        <class>com.gilbertoca.gfi.ger.model.Telefone</class>
        <class>com.gilbertoca.gfi.ger.model.PessoaDocumento</class>
        <class>com.gilbertoca.gfi.ger.model.PessoaCaracteristica</class>
        <class>com.gilbertoca.gfi.ger.model.PessoaDependencia</class>
        <properties>
            <property name="${jpa.driver}" value="${jdbc.driverClassName}"/>
            <property name="${jpa.url}" value="${jdbc.url}"/>
            <property name="${jpa.username}" value="${jdbc.username}"/>
            <property name="${jpa.ddl}" value="${jpa.ddl_value}"/>
        </properties>
    </persistence-unit>
</persistence>
