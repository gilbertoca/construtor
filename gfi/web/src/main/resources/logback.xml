<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>[GFI-WEB] %-5p %c - %m%n</pattern>
    </layout>
  </appender>
  <logger name="com.gilbertoca.gfi.inventario.service">
    <level value="DEBUG"/>
  </logger>
  <logger name="com.gilbertoca.gfi.*">
    <level value="DEBUG"/>
  </logger>
  
  <logger name="resource">
    <level value="INFO"/>
  </logger>
  <root>
    <level value="WARN"/>
    <appender-ref ref="stdout"/>
  </root>
</configuration>