<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence              http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
    <provider>${jpa.provider}</provider>
    <mapping-file>META-INF/orm.xml</mapping-file>
    <class>park.model.orm.Employee</class>
    <class>park.model.orm.LegalEntity</class>
    <class>park.model.orm.Stay</class>
    <class>park.model.orm.PriceTable</class>
    <class>park.model.orm.Person</class>
    <class>park.model.orm.VehicleType</class>
    <class>park.model.orm.Vehicle</class>
    <class>park.model.orm.NaturalPerson</class>
    <class>park.model.orm.Customer</class>
    <class>park.model.orm.Parking</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>${jpa.shared-cache-mode}</shared-cache-mode>
    <properties>
      <property name="${jpa.driver}" value="${jdbc.driverClassName}"/>
      <property name="${jpa.url}" value="${jdbc.url}"/>
      <property name="${jpa.username}" value="${jdbc.username}"/>
      <property name="${jpa.password}" value="${jdbc.password}"/>
      <property name="${jpa.dialect}" value="${jpa.dialect_value}"/>
      <property name="${jpa.ddl}" value="${jpa.ddl_value}"/>
      <property name="${jpa.logging}" value="${jpa.logging_value}"/>
      <property name="${jpa.cache.second_level}" value="${jpa.cache.second_level_value}"/>
      <property name="${jpa.cache.second_level_provider}" value="${jpa.cache.second_level_provider_value}"/>
      <property name="${jpa.minConnections}" value="1"/>
      <property name="${jpa.maxConnections}" value="2"/>
    </properties>
  </persistence-unit>
</persistence>
